<head>
    <link rel="stylesheet" href="~/Adminlte/css/login1.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css" />
</head>

<div class="sheet">
    <div class="card1">
        <img width="400px" src="~/Adminlte/images/LogoSC.png" />
        <hr />
        <h1 style="font-weight:bold;color:white;">Biarkan Keluhanmu Sampai dan Ditangani</h1>
    </div>
    <div class="card2">
        <div class="card-content">
            <div class="title"><span>Login Disini</span></div>
            <form asp-action="Login" method="post">
                <div class="row">
                    <i class="fas fa-user"></i>
                    <input id="email" type="email" name="Email" placeholder="Email">
                </div>
                <div class="row">
                    <i class="fas fa-lock"></i>
                    <input id="password" type="password" name="Password" placeholder="Password">
                </div>
                <div class="pass"><a href="#">Forgot password?</a></div>
                <div class="row button">
                    <input id="submit-btn" type="submit" name="submit" value="Login">
                </div>
                <div class="signup-link">Belum punya akun? <a href="">Register Dahulu</a></div>
            </form>
        </div>
    </div>
</div>
